# 🤖 Telegram Bot Token（你的机器人 token）
BOT_TOKEN=123456789:ABCyourTokenHere

# 🛢️ 数据库路径（本地 SQLite 或远程 PostgreSQL/MySQL URI）
DATABASE_URL=sqlite:///./data/db.sqlite3

# 🔐 超级管理员 TG 用户 ID（用于权限控制）
SUPER_ADMIN_ID=8195542935

# 🌐 Web 端口（gunicorn 监听端口）
WEB_PORT=8000

# 🪙 是否启用链上监听（True/False）
ENABLE_CHAIN_MONITOR=True

# 🔐 钱包权限级别（basic / advanced / superuser）
WALLET_ACCESS_LEVEL=advanced

# 📤 通知服务（邮件/SMS 等暂留）
NOTIFY_SERVICE=off
